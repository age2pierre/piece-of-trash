{
  "name": "boilerplate-react",
  "version": "0.1.0",
  "description": "A simple opinionated boilerplate",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/age2pierre/boilerplate-react.git"
  },
  "license": "ISC",
  "main": "src/index.tsx",
  "scripts": {
    "build": "parcel build src/index.html",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,scss,css,html}'",
    "lint": "eslint -c .eslintrc.json --fix 'src/**/*.{ts,tsx}'",
    "start": "parcel serve src/index.html --open --no-autoinstall",
    "test": "jest",
    "upgrade-interactive": "npx npm-check --update"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "package.json": [
      "sort-package-json"
    ],
    "*.{json,scss,css,html,md,mdx}": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "not dead"
  ],
  "dependencies": {
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "react-router-dom": "5.1.2",
    "react-spring": "8.0.27",
    "utility-types": "3.10.0"
  },
  "devDependencies": {
    "@types/jest": "25.1.4",
    "@types/react": "16.9.23",
    "@types/react-dom": "16.9.5",
    "@types/react-router-dom": "5.1.3",
    "@typescript-eslint/eslint-plugin": "2.23.0",
    "@typescript-eslint/parser": "2.23.0",
    "autoprefixer": "9.7.4",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.19.0",
    "husky": "4.2.3",
    "jest": "25.1.0",
    "lint-staged": "10.0.8",
    "parcel-bundler": "1.12.4",
    "parcel-plugin-bundle-visualiser": "1.2.0",
    "parcel-plugin-static-files-copy": "2.3.1",
    "prettier": "1.19.1",
    "sass": "1.26.3",
    "sort-package-json": "1.40.0",
    "ts-jest": "25.2.1",
    "typescript": "3.8.3"
  }
}
