{
  "name": "piece-of-trash",
  "version": "0.1.0",
  "description": "A simple opinionated boilerplate",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/age2pierre/piece-of-trash.git"
  },
  "license": "ISC",
  "main": "src/index.tsx",
  "scripts": {
    "build": "parcel build src/index.html",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,scss,css,html}'",
    "lint": "eslint -c .eslintrc.json --fix 'src/**/*.{ts,tsx}'",
    "start": "parcel serve src/index.html --open --no-autoinstall",
    "test": "jest --passWithNoTests",
    "type-check": "tsc --project tsconfig.json --noEmit",
    "upgrade-interactive": "npx npm-check --update"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,scss,css,html,md,mdx}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "not dead"
  ],
  "dependencies": {
    "immer": "9.0.6",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-router-dom": "5.2.0",
    "react-spring": "9.0.0-beta.34",
    "react-use-gesture": "7.0.16",
    "utility-types": "3.10.0"
  },
  "devDependencies": {
    "@types/jest": "26.0.14",
    "@types/react": "16.9.49",
    "@types/react-dom": "16.9.8",
    "@types/react-router-dom": "5.1.5",
    "@typescript-eslint/eslint-plugin": "4.1.1",
    "@typescript-eslint/parser": "4.1.1",
    "autoprefixer": "10.0.0",
    "eslint": "7.9.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-react": "7.20.6",
    "eslint-plugin-react-hooks": "4.1.2",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "lint-staged": "10.4.0",
    "parcel-bundler": "1.12.4",
    "parcel-plugin-bundle-visualiser": "1.2.0",
    "postcss-modules": "3.2.2",
    "prettier": "2.1.2",
    "sass": "1.26.11",
    "sort-package-json": "1.46.0",
    "ts-jest": "26.4.0",
    "typescript": "4.0.3",
    "typescript-plugin-css-modules": "2.7.0"
  }
}
